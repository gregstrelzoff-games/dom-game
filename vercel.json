{
  "headers": [
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/:path*.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "no-store" }
      ]
    },

    /* No-cache for all JS/CSS (any folder) */
    {
      "source": "/:path*\\.(js|mjs|css|map)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" },
        { "key": "Vercel-CDN-Cache-Control", "value": "no-store" }
      ]
    },

    /* Long-cache for heavy static media (safe to cache) */
    {
      "source": "/assets/:all*\\.(png|jpg|jpeg|gif|svg|webp|ico|mp3|wav|ogg|ttf|woff|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/:path*\\.(ttf|woff|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
